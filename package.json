{
  "name": "payload-blank",
  "version": "0.2.0",
  "description": "A boilerplate for a full-stack app built with Next.js and Payload CMS",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "format": "cross-env NODE_OPTIONS=--no-deprecation prettier --write --config-precedence file-override ./src/app/(frontend)",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation eslint .",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@payloadcms/db-sqlite": "^3.56.0",
    "@payloadcms/next": "^3.56.0",
    "@payloadcms/richtext-lexical": "^3.56.0",
    "@payloadcms/ui": "^3.56.0",
    "axios": "^1.12.2",
    "better-sqlite3": "^11.10.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.18",
    "dotenv": "^16.6.1",
    "graphql": "^16.11.0",
    "next": "^15.5.3",
    "payload": "^3.56.0",
    "react": "^19.1.1",
    "sharp": "^0.34.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.18.6",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "daisyui": "^5.1.13",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.3",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "playwright-core": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
